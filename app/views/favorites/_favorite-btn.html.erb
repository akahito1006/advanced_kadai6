<% if @book.favorited_by?(current_user) %>
  <%= form_with(url: book_favorites_path(@book), html: { method: :delete }, remote: true) do |f| %>
      <%= f.submit "♥ #{@book.favorites.count} いいね" %>
  <% end %>
<% else %>
  <%= form_with(url: book_favorites_path(@book), html: { method: :post }, remote: true) do |f| %>
      <%= f.submit "♡ #{@book.favorites.count} いいね" %>
  <% end %>
<% end %> 
    